<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ner_annotation_kanban" model="ir.ui.view">
        <field name="name">ner.annotation.kanban</field>
        <field name="model">ner.annotation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="dataset_id" clickable="True">
                <header>
                    <button type="object" class="btn btn-success btn-block" name="action_on_button_click">
                        <i class="fa fa-rocket"></i> Train with this dataset
                    </button>
                </header>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card" t-att-record-id="record.id.raw" draggable="False">
                            <div class="oe_kanban_details p-3">
                                <h4 class="text-primary">Text Information</h4>
                                <p>
                                    <strong>Text:</strong> <field name="text_content"/>
                                    <br/>
                                    <strong>Index:</strong> <field name="text_index"/>
                                </p>

                                <h4 class="text-primary">Character Range</h4>
                                <p>
                                    <strong>Start:</strong> <field name="start_char"/>
                                    <br/>
                                    <strong>End:</strong> <field name="end_char"/>
                                </p>

                                <h4 class="text-primary">Status</h4>
                                <p class="oe_status">
                                    <strong>Trained:</strong> <field name="trained"/>
                                </p>
                            </div>
                            <footer class="oe_kanban_footer text-center">
                                <button type="object" class="btn btn-warning" name="action_on_button_click">
                                    <i class="fa fa-cogs"/> Train with this dataset
                                </button>
                            </footer>
                        </div>
                    </t>
                </templates>
                <div class="oe_kanban_controls">
                </div>
            </kanban>
        </field>
    </record>
</odoo>
