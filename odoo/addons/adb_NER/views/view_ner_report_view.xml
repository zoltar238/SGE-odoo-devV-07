<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ner_report_tree" model="ir.ui.view">
        <field name="name">ner.report.tree</field>
        <field name="model">ner.report</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'"
                  decoration-warning="state == 'in_progress'"
                  decoration-success="state == 'completed'"
                  decoration-danger="state == 'failed'">
                <field name="reference"/>
                <field name="action_type"/>
                <field name="create_date"/>
                <field name="record_count"/>
                <field name="success_count"/>
                <field name="success_rate" widget="percentage"/>
                <field name="duration" widget="float_time"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ner_report_form" model="ir.ui.view">
        <field name="name">ner.report.form</field>
        <field name="model">ner.report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_complete" string="Mark as Completed"
                            type="object" class="oe_highlight"
                    />
                    <button name="action_fail" string="Mark as Failed"
                            type="object" class="btn-danger"
                    />
                    <field name="state" widget="statusbar"
                           statusbar_visible="completed,failed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="action_type"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="duration" widget="float_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Statistics">
                            <group>
                                <group>
                                    <field name="iteration_count"/>
                                    <field name="losses_average"/>
                                    <field name="record_count"/>
                                    <field name="success_count"/>
                                    <field name="error_count"/>
                                </group>
                                <group>
                                    <field name="success_rate" widget="percentage"/>
                                </group>
                            </group>
                        </page>
                        <page string="Log">
                            <group>
                                <field name="log" nolabel="1" placeholder="Detailed log information will be displayed here..."/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Add any additional notes or observations..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ner_report_search" model="ir.ui.view">
        <field name="name">ner.report.search</field>
        <field name="model">ner.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference"/>
                <field name="user_id"/>
                <field name="action_type"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                <separator/>
                <filter string="My Reports" name="my_reports" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Action Type" name="group_by_action" context="{'group_by': 'action_type'}"/>
                    <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Date" name="group_by_month" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_ner_report_pivot" model="ir.ui.view">
        <field name="name">ner.report.pivot</field>
        <field name="model">ner.report</field>
        <field name="arch" type="xml">
            <pivot string="NER Reports Analysis">
                <field name="action_type" type="row"/>
                <field name="record_count" type="measure"/>
                <field name="success_count" type="measure"/>
                <field name="success_rate" type="measure"/>
                <field name="duration" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_ner_report_calendar" model="ir.ui.view">
        <field name="name">ner.report.calendar</field>
        <field name="model">ner.report</field>
        <field name="arch" type="xml">
            <calendar string="NER Reports" date_start="create_date" color="user_id">
                <field name="reference"/>
                <field name="action_type"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_ner_report_kanban" model="ir.ui.view">
        <field name="name">ner.report.kanban</field>
        <field name="model">ner.report</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="reference"/>
                <field name="action_type"/>
                <field name="state"/>
                <field name="user_id"/>
                <field name="record_count"/>
                <field name="success_rate"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <field name="reference"/>
                                    </strong>
                                </div>
                                <div class="text-muted">
                                    <field name="action_type"/>
                                </div>
                                <div class="text-muted">
                                    <span>Records: <field name="record_count"/></span>
                                </div>
                                <div class="text-muted">
                                    <span>Success Rate: <field name="success_rate" widget="percentage"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection"
                                               options="{'classes': {'draft': 'default', 'in_progress': 'warning', 'completed': 'success', 'failed': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>