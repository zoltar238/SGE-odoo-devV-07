<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ner_report_kanban" model="ir.ui.view">
        <field name="name">ner.report.kanban</field>
        <field name="model">ner.report</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" 
                   records_draggable="0">
                <field name="reference"/>
                <field name="action_type"/>
                <field name="state"/>
                <field name="user_id"/>
                <field name="record_count"/>
                <field name="success_count"/>
                <field name="success_rate"/>
                <field name="duration"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click shadow-sm rounded-3 border-0 m-2">
                            <div class="oe_kanban_content p-3">
                                <!-- Header with title and status -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="d-flex align-items-center">
                                        <span t-attf-class="fa fa-circle me-2 text-#{record.state.raw_value == 'completed' ? 'success' : (record.state.raw_value == 'failed' ? 'danger' : 'warning')}"/>
                                        <strong class="o_kanban_record_title text-primary">
                                            <field name="reference"/>
                                        </strong>
                                    </div>
                                </div>

                                <!-- Action type with icon -->
                                <div class="d-flex flex-column mb-3">
                                    <div class="d-flex align-items-center">
                                        <img t-if="record.action_type.raw_value == 'training'" 
                                             t-attf-src="/adb_NER/static/img/icons/training.svg" 
                                             alt="Training" 
                                             class="me-2" 
                                             style="width: 24px; height: 24px;"/>
                                        <img t-if="record.action_type.raw_value == 'detection'" 
                                             t-attf-src="/adb_NER/static/img/icons/detection.svg" 
                                             alt="Detection" 
                                             class="me-2" 
                                             style="width: 24px; height: 24px;"/>
                                        <img t-if="record.action_type.raw_value == 'deletion'" 
                                             t-attf-src="/adb_NER/static/img/icons/deletion.svg" 
                                             alt="Deletion" 
                                             class="me-2" 
                                             style="width: 24px; height: 24px;"/>
                                        <img t-if="record.action_type.raw_value == 'creation'" 
                                             t-attf-src="/adb_NER/static/img/icons/creation.svg" 
                                             alt="Creation" 
                                             class="me-2" 
                                             style="width: 24px; height: 24px;"/>
                                        <span t-attf-class="badge rounded-pill px-3 py-2 bg-#{record.action_type.raw_value == 'training' ? 'info' : (record.action_type.raw_value == 'detection' ? 'primary' : (record.action_type.raw_value == 'creation' ? 'success' : 'secondary'))}">
                                            <field name="action_type"/>
                                        </span>
                                    </div>
                                </div>

                                <!-- Stats -->
                                <div class="row g-2 mb-3">
                                    <div class="col-6">
                                        <div class="border rounded p-2">
                                            <small class="text-muted">
                                                <i class="fa fa-database me-1"/>Records
                                            </small>
                                            <div class="fw-bold"><field name="record_count"/></div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="border rounded p-2">
                                            <small class="text-muted">
                                                <i class="fa fa-check-circle me-1"/>Success Rate
                                            </small>
                                            <div class="fw-bold">
                                                <field name="success_rate" widget="percentpie"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Footer -->
                                <div class="o_kanban_record_bottom border-top pt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                        <small class="text-muted ms-2">
                                            <i class="fa fa-clock-o me-1"/>
                                            <field name="duration" widget="float_time"/>
                                        </small>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection"
                                               options="{'classes': {
                                                   'draft': 'default', 
                                                   'in_progress': 'warning', 
                                                   'completed': 'success', 
                                                   'failed': 'danger'
                                               }}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
