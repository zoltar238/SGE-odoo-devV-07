<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ner_report_pivot" model="ir.ui.view">
        <field name="name">ner.report.pivot</field>
        <field name="model">adb_ner.report</field>
        <field name="arch" type="xml">
            <pivot string="NER Reports Analysis">
                <field name="action_type" type="row"/>
                <field name="record_count" type="measure"/>
                <field name="success_count" type="measure"/>
                <field name="success_rate" type="measure"/>
                <field name="duration" type="measure"/>
            </pivot>
        </field>
    </record>
</odoo>
