<?xml version="1.0" encoding="utf-8"?>

<!-- ner_dataset_views.xml -->
<odoo>
    <record id="view_ner_dataset_tree" model="ir.ui.view">
        <field name="name">ner.dataset.tree</field>
        <field name="model">ner.dataset</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_ner_dataset_form" model="ir.ui.view">
        <field name="name">ner.dataset.form</field>
        <field name="model">ner.dataset</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="text_list" widget="ace"/>
                        <group>
                            <button name="button_data_sanitizer" string="Sanitize data" type="object" class="btn_primary"/>
                            <div>
                                <p>
                                    <field name="wipe_punctuation" /> Wipe punctuation signs
                                </p>
                                <p>
                                    <field name="wipe_numbers"/> Wipe numbers
                                </p>
                            </div>
                            <button name="button_detect_entities" string="Detect named entities" type="object" class="btn_primary"/>
                        </group>
                        <field name="model_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>